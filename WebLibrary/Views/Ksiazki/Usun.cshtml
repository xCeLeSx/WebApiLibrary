@model WebApiLibrary.Models.Book

@{
    ViewData["Title"] = "Usuń Książke";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Czy na pewno chcesz usunąć tą Książke?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tytuł
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            Wydawca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Publisher)
        </dd>
        <dt class = "col-sm-2">
            Data dodania
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Added)
        </dd>
    </dl>
    
    <form asp-action="Usun">
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <hr />
        <a asp-action="Index">Wróc do Listy Książek</a>
    </form>
</div>
