@model WebApiLibrary.Models.User

@{
    ViewData["Title"] = "Usuń użytkownika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Czy na pewno chcesz usunąć tego Użytkownika?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imię
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Nazwisko
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Data urodzenia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pesel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pesel)
        </dd>
    </dl>
    
    <form asp-action="Usun">
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <hr />
        <a asp-action="Index">Wróć do Listy Użytkowników</a>
    </form>
</div>
